<div class="gtco-section">
  <div class="gtco-container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-6 animate-box">
          <h3>Produto Selecionado</h3>
          <%- include('./alerts') -%>
          <form action="/salvar-item-produto" method="POST" id="form-salvar-produto">
            <div class="row">
              <div class="col-lg-10 col-md-10 col-sm-10" data-row="<%= JSON.stringify(produto)%>">
                <a href="../<%=produto.imageProd%>" class="fh5co-card-item image-popup">
                  <figure>
                    <div class="overlay">
                      <i style="font-size: 1.5em;">
                        Comprar
                      </i>
                    </div>
                    <img src="../<%=produto.imageProd%>" alt="Image" class="img-responsive" style="margin: auto;">
                  </figure>
                  <div class="fh5co-text">
                    <h2><%=produto.nameProd%></h2>
                    <input type="hidden" value="../<%=produto.imageProd%>" name="mainImage" class="item">
                    <input type="hidden" value="<%=produto.idProd%>" name="mainCode" class="item">
                    <input type="hidden" value="" name="itens" class="item">
                    <p><%=produto.nutrictionInformationProd%></p>
                    <p>
                      <span class="price cursive-font">R$ <%=produto.salePriceProd%></span>
                    </p>
                  </div>
                </a>
              </div>
            </div>


          </form>
        </div>
        <div class="col-md-5 col-md-push-1 animate-box">

          <div class="gtco-contact-info">
            <h3>Produto</h3>
            <div class="card" style="width: 1em 0;">
              <ul class="list-group list-group-flush">

                <li class="list-group-item" style="margin:0.4em 0; padding: 0.5em;">
                  <input type="hidden" value="<%=produto.idProd%>" class="item" name="arrayItensCode">
                  <input type="hidden" value="<%=produto.nameProd%>" class="item" name="itensDecription">
                  <span style="padding: 0 1em;" class="icon"><i class="far fa-bookmark"
                      style="font-size: larger;"></i></span>
                  <%=produto.nameProd%>
                  <span style="float: right; color: red;" class="excluir">
                    <i class="far fa-trash-alt"></i>
                  </span>
                </li>



                <li class="list-group-item" style="margin:1em 0; padding: 0.5em;">
                  <span style="padding: 0 1em;"></span>
                  <strong>Adicionar novo item</strong>
                  <span style="float: right; color: darkgreen;">
                    <i class="far fa-plus-square"></i>
                  </span>
                </li>
              </ul>
            </div>
            <button type="submit" class="btn btn-default btn-block">
              <span style="float: left; font-size: 1.2em;">
              </span>
              Colocar no Carrinho
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module" src="./../javascripts/Controller/AddItemNoCarrinhoController.js"></script>
<script src="./../javascripts/util/Utils.js"></script>
<!-- FIM DO SCRIPT PARA ENVIAR O FORMULÃRIO -->
<script>
  Utils.atualizarQtdItensNoCarrinho();
</script>
</div>