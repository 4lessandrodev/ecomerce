<script src="../../../public/javascripts/js/script-formsave.js"></script>
<script>
  let form = document.querySelector('#form-subscribe');
  let inputs = form.querySelectorAll('input[type=email]');

  function recarregarPagina() {
    for (let input of inputs) {
      if (input.value == '') {
        return false;
      }
    }
    window.location.reload();
  };
  let btn = form.querySelector('button[type=submit]');

  btn.addEventListener('click', function () {
    setTimeout(recarregarPagina, 900);
  });

  form.save().then(json => {

  }).catch(err => {
    console.log(err);
  });
</script>
