<div class="container">
  <section class="cesta-selecionada">
    <!-- Stack the columns on mobile by making one full-width and the other half-width -->
    <div class="row">
      <div class="col-md-8 div-imagem">
        <img src="<%=produto.imagem%>" class="img-fluid" alt="Responsive image" alt="Imagem da cesta"
          id="imagem-principal-cesta">
      </div>
      <div class="col-6 col-md-4">
        <div class="col-4" id="nav-lateral">
          <div class="list-group" role="tablist">
            <a class="list-group-item list-group-item-success" data-toggle="list" role="tab" aria-controls="home">
              <h2><%=produto.descricao%></h2>
            </a>
            <a class="list-group-item list-group-item-action" data-toggle="list" role="tab" aria-controls="profile"
              id="categoria"><%=produto.descricao_categoria%> </a>
            <a class="list-group-item list-group-item-action descricao-item" data-toggle="list" role="tab"
              aria-controls="profile"><%=produto.info_nutricional%></a>
            <a class="list-group-item list-group-item-action" data-toggle="list" role="tab" aria-controls="messages">
              <h3>R$ <%=produto.preco_venda%> </h3>
            </a>
            <a class="list-group-item list-group-item-action" data-toggle="list" role="tab" aria-controls="settings">
              <div class="form-group">
                <label for="quantidade">Quantidade</label>
                <select class="form-control" id="quantidade" name="quantidade">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                </select>
              </div>
            </a>
          </div>
        </div>
        <div class="adicionar-produto">
          <button type="button" class="btn btn-success botao-comprar" id="btn-comprar-produto">Comprar agora</button>
          <button type="button" class="btn btn-outline-success botao-adicionar-carrinho" id="btn-add-produto">Adicionar
            ao carrinho</button>
        </div>
      </div>
    </div>
  </section>
  <hr>
  <h3>Você poderia gostar também</h3>
  <section class="tabela-produtos">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col" class="tr-id">Cod.</th>
          <th scope="col" class="tr-imagem-produto">Imagem</th>
          <th scope="col" class="tr-texto-centralizado">Descrição</th>
          <th scope="col" id="tr1">Preco</th>
          <th scope="col" id="tr2">Unidade Medida</th>
          <th scope="col" id="tr-opcao-titulo">Detalhes</th>
        </tr>
      </thead>
      <tbody>
        <%indicacoes.forEach(function(indicacao){ %>
        <tr onclick="location.href='/produto-selecionado/<%=indicacao.id%>'">
          <td scope="row" class="tr-id"><%=indicacao.id%></th>
          <td class="tr-imagem-produto"><img src="<%=indicacao.imagem%>" alt="imagem" class="imagem-produto"></td>
          <td class="tr-texto-centralizado"><%=indicacao.descricao%></td>
          <td id="tr3">R$ <%=indicacao.preco_venda%></td>
          <td id="tr4"><%=indicacao.und_descricao%></td>
          <td class="opcoes"><a href="/produto-selecionado/<%=indicacao.id%>"><i class="fas fa-eye"></i></a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </section>
  <div class="botoes-a-direita">
    <a href="/">
      <button type="button" class="btn btn-outline-success" id="adicionar-produto">Continuar Comprando</button></a>
  </div>
</div>

<section hidden style="display: none;">
  <form id="produto-compra" hidden style="display: none;">
    <input type="hidden" value="<%=produto.id%>" name="id_produto" id="id_produto">
    <input type="hidden" value="<%=produto.preco_venda%>" name="preco_unitario" id="preco_unitario">
  </form>
</section>
<script src="./../../javascripts/app.js" type="module"></script>