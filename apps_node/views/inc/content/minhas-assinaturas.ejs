<section style="width: 100vw; height: 10vh; background-color:rgb(100, 143, 101) ;">

</section>
<section class="container-fluid" style="background-color: #ededed;" id="sessao-perfil">
  <ul class="perfil-user-ul" style="list-style: none; width: 100vw; margin: 0; padding: 0;">

    <% for(let assinatura of assinaturas){ %>

    <li class="perfil-user-ul-li" style="width: 90vw;border: 2px solid darkolivegreen; 
      padding: 2vh; margin: 2vh 0; border-radius: 7px; background-color: white;"
      onclick="location.href='/minhas-assinaturas/<%=assinatura.id%>'">

      <div style="max-width: 18rem; width: 100vw; ">
        <div class="card-header" style="width: 80vw; font-weight: bold; text-transform: uppercase;">Assinatura
          00<%=assinatura.id%></div>
        <div class="card-body text-dark" style="width: 80vw;">
          <h4 class="card-title" style="padding: 0; margin: 0; color: darkgreen;"><%=assinatura.titulo%>
          </h4>
          <hr>
          <p style="padding: 0; margin: 0; font-size: 13px;"><%=assinatura.data_pedido%></p>
          <p style="padding: 0; margin: 0; font-size: 13px;"><%=assinatura.descricao_plano%></p>
          <p style="padding: 0; margin: 0; font-size: 13px;">
            <%=assinatura.cesta%>-<%=assinatura.categoria%>, <%=assinatura.entregas%>/<%=assinatura.quantidade_cestas%></p>
          <p style="padding: 0; margin: 0; font-size: 13px;"><%=assinatura.descricao_plano%></p>
          <p style="padding: 0; margin: 0; text-align: right;"><%=assinatura.status%></p>
        </div>
      </div>
    </li>

    <% } %>

  </ul>
</section>