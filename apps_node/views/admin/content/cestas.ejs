    <main>
      <!------------------------------------------------------------------------------------------------------------>
      <!--FORMULARIO PARA CADASTRO DE UM NOVO PRODUTO-->
      <section class="container formulario display-none" id="form-new">
        <div style="margin-bottom: 1em;">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="btn-close-produto"
            onclick="Utils.ocultarFormulario('#form-new', 'display-none', true)">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <form method="POST" action="/admin/cesta">
          <div class="form-row">
            <div class="form-group col-md-2" id="div-imagem-nova">
              <label for="imagem" class="caixaImg">
                <input type="file" hidden name="imagem" id="imagem" accept="image/png">
                <img src="../../../images/images/SemImagem-300x300px.png" alt="Imagem" class="imagem rounded-circle"
                  id="imagem-img">
                <div class="sobreposicao">
                  <h5 class="texto">Adicionar Imagem</h5>
                  <span class="icone"><i class="fas fa-chevron-circle-up"></i></span>
                </div>
              </label>
            </div>

            <div class="form-group col-md-4">
              <label for="descricao"><strong>Descrição</strong></label>
              <input type="text" class="form-control" id="descricao" name="descricao">
            </div>

            <div class="form-group col-md-4">
              <label for="id_categoria_cesta"><strong>Categoria</strong></label>
              <select class="form-control" id="id_categoria_cesta" name="id_categoria_cesta">
                <option selected>Selecione...</option>
                <% categorias.forEach(function(categ){ %>
                <option value="<%= categ.id%>"><%=categ.description%></option>
                <% }); %>
              </select>
            </div>

            <div class="form-group col-md-2">
              <label for="preco"><strong>Preço de Venda</strong></label>
              <input type="number" class="form-control" id="preco" name="preco">
            </div>

            <div class="form-group col-md-6">
              <label for="produtos"><strong>Produtos da Cesta</strong></label>
              <select class="mdb-select md-form form-control" multiple size="5" name="produtos" id="produtos" multiple
                data-item="<%= JSON.stringify(produtos)%>">
                <% produtos.forEach(function(produto){ %>
                <option value="<%= produto.id%>"><%=produto.descricao%> -
                  <% if(produto.status){ %>Ativo<% }else{ %><i>Bloqueado</i><% }; %>
                  <% }); %>
              </select>
            </div>

            <div class="form-group col-md-6">
              <label for="informacoes_nutricionais"><strong>Informações Nutricionais</strong></label>
              <textarea class="form-control" id="informacoes_nutricionais" rows="5"
                name="informacoes_nutricionais"></textarea>
            </div>

            <div class="form-group col-md-4">
              <label for="qtdItensCesta"><strong>Quantidade de itens</strong></label>
              <input type="number" class="form-control" id="qtdItensCesta" name="qtdItensCesta">
            </div>

            <div class="form-group col-md-4">
              <label for="alteracoes_permitidas"><strong>Quantidade de Alterações Permitidas</strong></label>
              <input type="number" class="form-control" id="alteracoes_permitidas" name="alteracoes_permitidas">
            </div>

            <div class="form-group col-md-4">
              <label for="status"><strong>Status</strong></label>
              <select id="status" class="form-control" name="status">
                <option selected>Selecione...</option>
                <option value="1">Ativo</option>
                <option value="0">Bloqueado</option>
              </select>
            </div>

          </div>
          <div class="botoes-a-direita">
            <button type="reset" class="btn btn-success btn-cancelar">Cancelar</button>
            <button type="submit" class="btn btn-primary botao-salvar">Salvar</button>
          </div>
          </div>
        </form>
      </section>
      <!------------------------------------------------------------------------------------------------------------>

