<section class="container-fluid">

  <div class="navbar navbar-light" style="display: flex;">
    <h6 class="navbar-brand" style="display: inline-block; width: 100%;">
      Relatório de Assinantes Ativos
    </h6>
  </div>
  
  <ul class="nav nav-tabs" id="tabb" role="tablist">
    <li class="nav-item" onclick="location.href='/admin/relatorio-produtos'">
      <a class="nav-link" id="relatorio-produtos" data-toggle="tab" href="/admin/relatorio-produtos" role="tab"
      aria-controls="relatorio-produtos" aria-selected="true">Produtos pedido</a>
    </li>
    <li class="nav-item" onclick="location.href='/admin/relatorio-entregas'">
      <a class="nav-link" id="relatorio-entregas" data-toggle="tab" href="/admin/relatorio-entregas" role="tab"
      aria-controls="relatorio-entregas" aria-selected="false">Entregas</a>
    </li>
    <li class="nav-item" onclick="location.href='/admin/relatorio-assinantes'">
      <a class="nav-link active" id="relatorio-assinantes" data-toggle="tab" href="/admin/relatorio-assinantes"
      role="tab"
      aria-controls="relatorio-assinantes" aria-selected="false">Assinantes</a>
    </li>
  </ul>
  <div class="tab-content" id="conteudo">
    <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="home-tab">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Cliente</th>
            <th scope="col">Descrição</th>
            <th scope="col">Data Assinatura</th>
            <th scope="col">Cesta</th>
            <th scope="col">Qtd. Cestas</th>
            <th scope="col">Qtd. Entreg.</th>
            <th scope="col">Preço Total</th>
            <th scope="col">Status</th>
            <th scope="col">Detalhe</th>
          </tr>
        </thead>
        <tbody>
          <% for(let ass of assinaturas){%>
            <tr>
              <th scope="row"><%=ass.id%></th>
              <td><%=ass.titulo%></td>
              <td><%=ass.cliente%></td>
              <td><%=ass.descricao_plano%></td>
              <td><%=ass.data_pedido%></td>
              <td><%=ass.cesta%> - <%=ass.categoria%></td>
              <td><%=ass.quantidade_cestas%></td>
              <td><%=ass.entregas%></td>
              <td>R$ <%=ass.preco_unitario%></td>
              <td><%=ass.status%></td>
              <td class="btn-edit" data-plano="<%=JSON.stringify(ass)%>"
                onclick="location.href='/admin/assinatura-selecionada/<%=ass.id%>'" style="text-align: center;">
                <i class="fas fa-eye"></i>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>