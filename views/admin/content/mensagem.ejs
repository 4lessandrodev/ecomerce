<main>
  <!-------------------------------------------------------------------------------------------------->
  <!--TABELA LISTA DE CESTAS-->
  <section class="container list-itens-container table-responsive-md">
    <div class="navbar navbar-light">
      <h6 class="navbar-brand">
        Lista de Mensagens
      </h6>
    </div>

    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">Mensagem</th>
          <th scope="col">Data</th>
          <th scope="col">Excluir</th>
        </tr>
      </thead>
      <tbody>
        <%mensagens.forEach(function(msg){ %>
        <tr>
          <th scope="row"><%=msg.nome%></th>
          <td><%=msg.email%></td>
          <td><%=msg.mensagem%></td>
          <td><%=msg.data_hora%></td>
          <td style="text-align: center; cursor: pointer;" data-id="<%=msg.id%>" onclick="Utils.excluirEmail(this)"><i
              class="far fa-trash-alt"></i></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </section>
</main>